varnishtest "KVM: Execution timeout"

shell {
cat >${tmpdir}/${testname}.c <<-EOF
#include "kvm_api.h"
#include <assert.h>

static void my_storage(size_t n, struct virtbuffer buffers[n], size_t reslen)
{
	while(1);
}

static void my_backend(const char *arg)
{
	char result[256];
	strcpy(result, "Hello World (NOT)");
	const long rlen =
		storage_callv(my_storage, 0, NULL, result, sizeof(result));

	const char ctype[] = "text/plain";
	backend_response(200, ctype, sizeof(ctype)-1, result, rlen);
}

int main()
{
	set_backend_get(my_backend);
	wait_for_requests();
}
EOF
gcc -static -O2 ${tmpdir}/${testname}.c -I${testdir} -o ${tmpdir}/${testname}
}

varnish v1 -vcl+backend {
vcl 4.1;
	import kvm;

	backend default none;

	sub vcl_init {
		kvm.embed_tenants("""
			{
				"diefast": {
					"max_time": 1.0,
					"max_memory": 262144,
					"max_work_memory": 256
				},
				"xpizza.com": {
					"filename": "${tmpdir}/${testname}",
					"key": "",
					"group": "diefast"
				}
			}
		""");
	}

	sub vcl_recv {
		return (pass);
	}

	sub vcl_backend_fetch {
		set bereq.backend = kvm.vm_backend(
				bereq.http.Host,
				bereq.url);
	}
} -start

client c1 {
	# The program should timeout and respond 503
	txreq -url "/" -hdr "Host: xpizza.com"
	rxresp
	expect resp.status == 500
} -run
