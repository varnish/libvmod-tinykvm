varnishtest "Test SecResponseBodyLimitAction"

server s1 {
	# Response isn't denied because Content-Type is not in test.conf
	rxreq
	txresp -nolen -hdr "Transfer-encoding: chunked"
	chunkedlen 100
	delay .2
	chunkedlen 100
	delay .2
	chunkedlen 100
	delay .2
	chunkedlen 0

	# Response is denied because Content-Type is in test.conf
	rxreq
	txresp -nolen -hdr "Content-Type: text/plain" -hdr "Transfer-encoding: chunked"
	chunkedlen 100
	delay .2
	chunkedlen 100
	delay .2
	chunkedlen 100
	delay .2
	chunkedlen 0
} -start


varnish v1 -arg "-p thread_pool_stack=92k" -vcl+backend {
	include "${pwd}/waf.vcl";

	sub vcl_init {
		varnish_waf.add_files("${testdir}/test.conf");
	}

} -start

logexpect l1 -v v1 -g request -i WAF,FetchError {
	expect 	* * 	WAF		{^ReqHeaders: \d*$}
	expect 	* * 	WAF		{ReqBody: 0}
	expect 	* * 	WAF		{^RespHeaders: \d*$}
	expect 	* * 	WAF		{RespBody: 300}

	expect 	* * 	WAF		{^ReqHeaders: \d*$}
	expect 	* * 	WAF		{ReqBody: 0}
	expect 	* * 	WAF		{^RespHeaders: \d*$}
	expect 	* * 	WAF		{LOG:}
	expect 	* *	FetchError	{WAF: Intercepted the body}
	expect 	* * 	WAF		{RespBody: 200}
} -start


client c1 {
	txreq -url \a
	rxresp
	expect resp.status == 200
	expect resp.bodylen == 300

	txreq -url \b
	rxresp
	expect resp.status == 403
	expect resp.bodylen == 0
} -run

logexpect l1 -wait
