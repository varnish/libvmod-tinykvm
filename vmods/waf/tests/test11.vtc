varnishtest "waf with retry"

server s1 {
	rxreq
	txresp -hdr "test: 1"
	rxreq
	txresp -hdr "test: 2"
} -start

varnish v1 -arg "-p thread_pool_stack=92k" -vcl+backend {
	include "${pwd}/waf.vcl";

	sub vcl_init {
		varnish_waf.add_files("${testdir}/test.conf");
	}

	sub vcl_backend_response {
		if (bereq.retries == 0) {
			return (retry);
		}
	}

} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
	expect resp.http.test == "2"
} -run
