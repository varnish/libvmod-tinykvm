varnishtest ""

server s1 {
	rxreq
	txresp -bodylen 12582912
} -start

varnish v1 -vcl+backend {
	import utils;

	sub vcl_recv {
		return (pass);
	}
	sub vcl_backend_response {
		utils.set_bypass_buffer_size(1KB);
	}
} -start

client c1 -connect "${v1_sock}" {
	txreq
	rxresp
	expect resp.bodylen == 12582912
} -start

varnish v1 -expect VBE.vcl1.s1.beresp_bodybytes < 100000

# Make sure request finishes OK
client c1 -wait
