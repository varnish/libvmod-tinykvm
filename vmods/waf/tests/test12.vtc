varnishtest "Call phase 2 with no req body"

shell {
	cat >${tmpdir}/test.conf <<-EOF
	SecRuleEngine On
	# Block all URLs starting with foo. Return status of 678
    	SecRule REQUEST_URI "/foo" "id:1, phase:2, deny"
	EOF
}

server s1 {
	rxreq
	txresp
} -start

varnish v1 -arg "-p thread_pool_stack=92k" -vcl+backend {
	include "${pwd}/waf.vcl";

	sub vcl_init {
		varnish_waf.add_files("${tmpdir}/test.conf");
	}

} -start

logexpect l1 -v v1 -g request -i WAF,VCL_return {
	expect 	* * 	WAF		{^ReqHeaders: \d*$}
	expect 	* * 	WAF		{ReqBody: 0}
	expect 	* * 	WAF		{LOG:}
	expect	* *	VCL_return	{error}
} -start

client c1 {
	txreq -url /foo
	rxresp
	expect resp.status == 403
} -run

logexpect l1 -wait
