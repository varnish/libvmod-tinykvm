varnishtest "Quality quality assurance"

server s1 {} -start

varnish v1 -vcl+backend {
	import accept;

	sub vcl_init {
		new rule = accept.rule("foo");
		rule.add("bar");
		rule.add("baz");
	}

	sub vcl_recv {
		return (synth(200));
	}

	sub vcl_synth {
		if (req.http.x-rm) {
			rule.remove(req.http.x-rm);
		}
		set resp.http.tst = rule.filter(req.http.tst);
		return (deliver);
	}
} -start

client c1 {
	txreq -hdr "tst: bar; q = 1"
	rxresp
	expect resp.http.tst == "foo"

	txreq -hdr "tst: bar; q= 0.5"
	rxresp
	expect resp.http.tst == "foo"

	txreq -hdr "tst: bar; q =0.8"
	rxresp
	expect resp.http.tst == "foo"

	txreq -hdr "tst: bar; quick=0.2, baz; q=0.3"
	rxresp
	expect resp.http.tst == "bar"

	txreq -hdr "tst: bar; q=0"
	rxresp
	expect resp.http.tst == "foo"

	txreq -hdr "tst: bar; level=1; q=0.3, baz;q=0.5"
	rxresp
	expect resp.http.tst == "bar"

	txreq -hdr "tst: bar; level=1; q=0.3, baz;q=0.5" -hdr "x-rm: bar"
	rxresp
	expect resp.http.tst == "baz"

	txreq -hdr "tst: bar; level=1; q=0.3, baz;q=0.5" -hdr "x-rm: bar"
	rxresp
	expect resp.http.tst == "baz"

	txreq -hdr "tst: bar; level=1; q=0.3, baz;q=0.5" -hdr "x-rm: baz"
	rxresp
	expect resp.http.tst == "foo"

} -run
